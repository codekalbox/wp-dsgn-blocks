{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "version": "0.1.0",
    "name": "premium/buttons",
    "title": "Buttons",
    "description": "Add stylish buttons to your Gutenberg page using Premium Button Block.",
    "category": "premium-blocks",
    "textdomain": "premium-blocks-for-gutenberg",
    "keywords": [
        "button",
        "link",
        "call to action",
        "cta",
        "buttons",
        "button group",
        "button set",
        "button collection"
    ],
    "attributes": {
        "blockId": {
            "type": "string",
            "default": ""
        },
        "align": {
            "type": "object",
            "default": {
                "Desktop": "",
                "Tablet": "",
                "Mobile": ""
            },
            "isStyle": true
        },
        "classMigrate": {
            "type": "boolean",
            "default": false
        },
        "typography": {
            "type": "object",
            "default": {
                "fontWeight": "Default",
                "fontStyle": "",
                "letterSpacing": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": "px"
                },
                "fontFamily": "Default",
                "lineHeight": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": "px"
                },
                "textDecoration": "",
                "textTransform": "",
                "fontSize": {
                    "Desktop": "",
                    "Tablet": "",
                    "Mobile": "",
                    "unit": {
                        "Desktop": "px",
                        "Tablet": "px",
                        "Mobile": "px"
                    }
                }
            },
            "isStyle": true
        },
        "groupMargin": {
            "type": "object",
            "default": {
                "Desktop": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "Tablet": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "Mobile": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "unit": {
                    "Desktop": "px",
                    "Tablet": "px",
                    "Mobile": "px"
                },
                "link": true
            },
            "isStyle": true
        },
        "groupPadding": {
            "type": "object",
            "default": {
                "Desktop": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "Tablet": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "Mobile": {
                    "top": "",
                    "right": "",
                    "bottom": "",
                    "left": ""
                },
                "unit": {
                    "Desktop": "px",
                    "Tablet": "px",
                    "Mobile": "px"
                },
                "link": true
            },
            "isStyle": true
        },
        "groupAlign": {
            "type": "object",
            "default": {
                "Desktop": "horizontal",
                "Tablet": "",
                "Mobile": ""
            },
            "isStyle": true
        },
        "buttonGap": {
            "type": "object",
            "default": {
                "Desktop": "10",
                "Tablet": "",
                "Mobile": "",
                "unit": "px"
            },
            "isStyle": true
        }
    },
    "editorScript": "pbg-blocks-js",
    "editorStyle": "premium-blocks-editor-css"
}
