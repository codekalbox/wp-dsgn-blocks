{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "flexblocks/section",
	"version": "1.0.0",
	"title": "Section",
	"category": "flexblocks",
	"icon": "layout",
	"description": "A flexible container block with complete flexbox control and styling options.",
	"keywords": ["section", "container", "flexbox", "layout"],
	"textdomain": "flexblocks-layout-builder",
	"supports": {
		"html": false,
		"anchor": true,
		"align": ["wide", "full"],
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"attributes": {
		"htmlTag": {
			"type": "string",
			"default": "section"
		},
		"contentWidth": {
			"type": "string",
			"default": "full"
		},
		"maxWidth": {
			"type": "string",
			"default": "1200px"
		},
		"minHeight": {
			"type": "string",
			"default": "auto"
		},
		"minHeightValue": {
			"type": "string",
			"default": "400px"
		},
		"flexDirection": {
			"type": "string",
			"default": "row"
		},
		"justifyContent": {
			"type": "string",
			"default": "flex-start"
		},
		"alignItems": {
			"type": "string",
			"default": "stretch"
		},
		"flexWrap": {
			"type": "string",
			"default": "nowrap"
		},
		"gap": {
			"type": "string",
			"default": "20px"
		},
		"paddingTop": {
			"type": "string",
			"default": ""
		},
		"paddingRight": {
			"type": "string",
			"default": ""
		},
		"paddingBottom": {
			"type": "string",
			"default": ""
		},
		"paddingLeft": {
			"type": "string",
			"default": ""
		},
		"paddingLinked": {
			"type": "boolean",
			"default": true
		},
		"marginTop": {
			"type": "string",
			"default": ""
		},
		"marginRight": {
			"type": "string",
			"default": ""
		},
		"marginBottom": {
			"type": "string",
			"default": ""
		},
		"marginLeft": {
			"type": "string",
			"default": ""
		},
		"marginLinked": {
			"type": "boolean",
			"default": true
		},
		"backgroundColor": {
			"type": "string",
			"default": ""
		},
		"backgroundOpacity": {
			"type": "number",
			"default": 1
		},
		"backgroundImage": {
			"type": "object",
			"default": null
		},
		"backgroundPosition": {
			"type": "string",
			"default": "center center"
		},
		"backgroundSize": {
			"type": "string",
			"default": "cover"
		},
		"backgroundRepeat": {
			"type": "string",
			"default": "no-repeat"
		},
		"backgroundGradient": {
			"type": "string",
			"default": ""
		},
		"borderTopWidth": {
			"type": "string",
			"default": ""
		},
		"borderRightWidth": {
			"type": "string",
			"default": ""
		},
		"borderBottomWidth": {
			"type": "string",
			"default": ""
		},
		"borderLeftWidth": {
			"type": "string",
			"default": ""
		},
		"borderStyle": {
			"type": "string",
			"default": "solid"
		},
		"borderColor": {
			"type": "string",
			"default": ""
		},
		"borderTopLeftRadius": {
			"type": "string",
			"default": ""
		},
		"borderTopRightRadius": {
			"type": "string",
			"default": ""
		},
		"borderBottomRightRadius": {
			"type": "string",
			"default": ""
		},
		"borderBottomLeftRadius": {
			"type": "string",
			"default": ""
		},
		"boxShadowX": {
			"type": "string",
			"default": "0px"
		},
		"boxShadowY": {
			"type": "string",
			"default": "0px"
		},
		"boxShadowBlur": {
			"type": "string",
			"default": "0px"
		},
		"boxShadowSpread": {
			"type": "string",
			"default": "0px"
		},
		"boxShadowColor": {
			"type": "string",
			"default": "rgba(0,0,0,0.1)"
		},
		"boxShadowEnabled": {
			"type": "boolean",
			"default": false
		},
		"customClassName": {
			"type": "string",
			"default": ""
		},
		"customId": {
			"type": "string",
			"default": ""
		},
		"zIndex": {
			"type": "string",
			"default": ""
		},
		"overflow": {
			"type": "string",
			"default": "visible"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
