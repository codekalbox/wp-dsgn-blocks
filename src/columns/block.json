{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "flexblocks/columns",
	"version": "1.0.0",
	"title": "Columns",
	"category": "flexblocks",
	"icon": "columns",
	"description": "Create flexible, responsive column layouts with customizable widths and styling.",
	"keywords": ["columns", "layout", "grid", "responsive"],
	"textdomain": "flexblocks-layout-builder",
	"supports": {
		"html": false,
		"anchor": true,
		"align": ["wide", "full"]
	},
	"attributes": {
		"columnCount": {
			"type": "number",
			"default": 2
		},
		"columns": {
			"type": "array",
			"default": [
				{
					"width": "",
					"backgroundColor": "",
					"paddingTop": "",
					"paddingRight": "",
					"paddingBottom": "",
					"paddingLeft": ""
				},
				{
					"width": "",
					"backgroundColor": "",
					"paddingTop": "",
					"paddingRight": "",
					"paddingBottom": "",
					"paddingLeft": ""
				}
			]
		},
		"verticalAlignment": {
			"type": "string",
			"default": "stretch"
		},
		"columnGap": {
			"type": "string",
			"default": "20px"
		},
		"stackOnMobile": {
			"type": "boolean",
			"default": true
		},
		"mobileBreakpoint": {
			"type": "string",
			"default": "768px"
		},
		"reverseOnMobile": {
			"type": "boolean",
			"default": false
		},
		"presetLayout": {
			"type": "string",
			"default": "equal"
		}
	},
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css"
}
